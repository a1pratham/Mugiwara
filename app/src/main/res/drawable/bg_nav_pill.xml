<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded pill -->
    <corners android:radius="28dp"/>

    <!-- Glassy dark gradient -->
    <gradient
        android:startColor="#DD1C1C1C"
        android:endColor="#FF0F0F0F"
        android:angle="270"/>

    <!-- Subtle inner padding illusion -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp"/>
</shape>
