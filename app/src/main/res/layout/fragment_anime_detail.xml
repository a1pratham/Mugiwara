<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- ================= BACKGROUND WALLPAPER ================= -->

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_anime_detail_page"
        android:alpha="0.50"/>

    <!-- ================= DARK OVERLAY ================= -->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#55000000"/>


    <!-- ================= FOREGROUND CONTENT ================= -->

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- ================= HERO CARD (SAIKOU STYLE) ================= -->

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_featured_card_rounded"
                android:clipToOutline="true">


                <!-- Background Cover -->
                <ImageView
                    android:id="@+id/imgCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/temp_bg_anime"/>

                <!-- Dark Gradient Overlay -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_top_gradient"/>


                <!-- Content Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:padding="20dp">


                    <!-- Poster -->
                    <ImageView
                        android:id="@+id/imgPoster"
                        android:layout_width="130dp"
                        android:layout_height="190dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_poster_rounded"
                        android:src="@drawable/temp_poster"/>


                    <!-- Space -->
                    <View
                        android:layout_width="16dp"
                        android:layout_height="1dp"/>


                    <!-- Title + Meta -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">


                        <TextView
                            android:id="@+id/txtTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attack on Titan"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:maxLines="2"/>


                        <TextView
                            android:id="@+id/txtRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⭐ 9.0 • 25 Episodes"
                            android:textColor="#FF4D8D"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:layout_marginTop="8dp"/>


                        <TextView
                            android:id="@+id/txtGenresMini"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Action • Drama • Thriller"
                            android:textColor="#CCCCCC"
                            android:textSize="12sp"
                            android:layout_marginTop="6dp"/>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


            <!-- ================= STATUS GLASS PILL ================= -->

            <TextView
                android:id="@+id/statusPill"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:text="PLANNING ▼"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_glass_pill"
                android:clickable="true"
                android:focusable="true"/>


            <!-- ================= ACTION BUTTONS (WATCH TAB) ================= -->

            <LinearLayout
                android:id="@+id/watchActionsRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <!-- Watch Button -->
                <Button
                    android:id="@+id/btnWatch"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_status_active"
                    android:text="▶ Watch Now"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <!-- Add Button -->
                <ImageButton
                    android:id="@+id/btnAdd"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_circle"
                    android:padding="12dp"
                    android:src="@drawable/ic_profile"/>

                <!-- Favorite Button -->
                <ImageButton
                    android:id="@+id/btnFav"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_circle"
                    android:padding="12dp"
                    android:src="@drawable/ic_profile"/>

            </LinearLayout>


            <!-- ================= TAB PILL ================= -->

            <LinearLayout
                android:id="@+id/detailPill"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_margin="20dp"
                android:background="@drawable/bg_nav_pill"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tabInfo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="INFO"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/tabWatch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="WATCH"
                    android:textStyle="bold"
                    android:textColor="#888888"/>

            </LinearLayout>


            <!-- ================= INFORMATION ================= -->

            <TextView
                android:id="@+id/infoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Information"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/infoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"/>


            <!-- ================= SYNOPSIS ================= -->

            <TextView
                android:id="@+id/tvSynopsisTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synopsis"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="25dp"
                android:paddingStart="20dp"/>

            <TextView
                android:id="@+id/tvSynopsisText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:padding="16dp"
                android:background="@drawable/bg_glass_synopsis"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:maxLines="4"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/btnReadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More"
                android:textColor="#FF4D8D"
                android:textStyle="bold"
                android:layout_marginStart="22dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"/>


            <!-- ================= GENRES ================= -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genres"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingStart="20dp"
                android:layout_marginTop="25dp"/>

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/genreContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="10dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"/>


            <!-- ================= CHARACTERS ================= -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Characters"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingStart="20dp"
                android:layout_marginTop="25dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCharacters"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"/>


            <!-- ================= RELATIONS ================= -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relations"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingStart="20dp"
                android:layout_marginTop="25dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRelations"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"/>


            <!-- ================= RECOMMENDED ================= -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommended"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingStart="20dp"
                android:layout_marginTop="25dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommended"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="12dp"
                android:paddingStart="16dp"/>


            <!-- Bottom Space -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
