<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BACKGROUND IMAGE -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_anime_page"
        android:scaleType="centerCrop" />

    <!-- ================= PAGE CONTENT ================= -->
    <ScrollView
        android:id="@+id/animeScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="96dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SEARCH BAR (SCROLLS NATURALLY) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_search_glass"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical">

                    <!-- SEARCH INPUT -->
                    <EditText
                        android:id="@+id/searchInput"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="SEARCH ANIME"
                        android:textColor="@android:color/white"
                        android:textColorHint="#99FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:padding="0dp" />

                    <!-- SEARCH ICON -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        android:tint="@android:color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- FEATURED SLIDER -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/featuredPager"
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <!-- INDICATOR -->
            <LinearLayout
                android:id="@+id/featuredIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" />

            <!-- GENRES / CALENDAR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- GENRES -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="false">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_genres"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#55000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GENRES"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <!-- CALENDAR -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="72dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:cardUseCompatPadding="false">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_calendar"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#55000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALENDAR"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- RECENT SECTION TITLE -->
            <TextView
                android:text="Recently Updated"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="16dp" />

            <!-- RECENT LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentAnimeRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <!-- POPULAR SECTION TITLE -->
            <TextView
                android:text="Popular Anime"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:layout_marginTop="24dp" />

            <!-- POPULAR LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popularAnimeRecycler"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
